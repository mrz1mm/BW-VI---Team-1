@model BW_VI___Team_1.Models.Locker

@{
    ViewData["Title"] = "UpdateLocker";
}
<div class="edit border border-1 rounded-1 my-3">
    <h1 class="text-white text-center">Modifica Armadietto</h1>

    <h4 class="text-white text-center">Armadietto</h4>
    <hr class="text-light />
<div class="row">
        <div class="col-md-4 ColorNavbar container border border-2 rounded-3  text-white mb-4" ">
        <form asp-action="UpdateLocker">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-2">
                <label asp-for="Number" class="control-label">Numero armadietto</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
<div class="my-3">
    <a asp-action="Index" class="text-decoration-none">Torna alla lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
