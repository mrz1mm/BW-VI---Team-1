@model BW_VI___Team_1.Models.Locker

@{
    ViewData["Title"] = "UpdateLocker";
}
<div class="container">
<h1>Modifica Armadietto</h1>

<h4>Armadietto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateLocker">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-2">
                <label asp-for="Number" class="control-label">Numero armadietto</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
<div class="my-3">
    <a asp-action="Index">Torna alla lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
