@model BW_VI___Team_1.Models.Supplier

@{
    ViewData["Title"] = "UpdateSupplier";
}
<div class="container">
<h1 class="text-info">Modifica Fornitori</h1>

<h4>Fornitori</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateSupplier">
            <div class="form-group my-2">
                <label asp-for="Name" class="control-label">Nome Fornitore</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="Address" class="control-label">Indirizzo</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="Telephone" class="control-label">Numero di telefono</label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group my-3">
                <button type="submit" class="btn btn-primary">Salva</button>
                <a asp-action="Index" class="btn btn-danger">Elimina</a>
            </div>
        </form>
    </div>
</div>
</div>
<div class="my-2">
    <a asp-action="Index">Torna alla lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
