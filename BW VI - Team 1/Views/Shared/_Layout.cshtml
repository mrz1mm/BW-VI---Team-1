<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BW_VI___Team_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BW_VI___Team_1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BW_VI___Team_1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <div class="dropdown">
                            <button class="btn btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Animali
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="Index">Animali</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="AddAnimal">Aggiungi animale</a></li>
                            </ul>
                        </div>

                        <div class="dropdown">
                            <button class="btn btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Ordini
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="Index">Ordini</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="AddAnimal">Aggiungi ordine</a></li>
                            </ul>
                        </div>

                        <div class="dropdown">
                            <button class="btn btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Proprietari
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="Index">Proprietari</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="AddAnimal">Aggiungi proprietario</a></li>
                            </ul>
                        </div>

                        <div class="dropdown">
                            <button class="btn btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Prodotti
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="Index">Prodotti</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="AddAnimal">Aggiungi prodotto</a></li>
                            </ul>
                        </div>

                        <div class="dropdown">
                            <button class="btn btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Ricoveri
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="Index">Ricoveri</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="AddAnimal">Aggiungi ricovero</a></li>
                            </ul>
                        </div>

                        <div class="dropdown">
                            <button class="btn btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Fornitori
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="Index">Fornitori</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="AddAnimal">Aggiungi fornitore</a></li>
                            </ul>
                        </div>

                        <div class="dropdown">
                            <button class="btn btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Usi
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="Index">Usi</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="AddAnimal">Aggiungi uso</a></li>
                            </ul>
                        </div>

                        <div class="dropdown">
                            <button class="btn btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Visite
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="Index">Visite</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Animal" asp-action="AddAnimal">Aggiungi visita</a></li>
                            </ul>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BW_VI___Team_1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
