@model IEnumerable<BW_VI___Team_1.Models.Product>

@{
    ViewData["Title"] = "Index";
}



<div class="table">
    <section class="table_header"><h1 class="text-center">Registro Prodotti</h1></section>
    <section class="table_body d-flex align-item-center justify-content-center">
<table>
    <thead>
                <tr class="text-center">
            <th>
                Nome Prodotto
            </th>
            <th>
                Tipo
            </th>
            <th>
                Fornitore
            </th>
            <th>
                Per uso
            </th>
            <th>
                Armadietto
            </th>
            <th>
                Cassetto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                    <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @if (item.Suppliers != null && item.Suppliers.Any())
                    {
                        @string.Join(", ", item.Suppliers.Select(s => s.Name))
                    }
                    else
                    {
                        <span>No Suppliers</span>
                    }
                </td>
                <td>
                    @if (item.Usages != null && item.Usages.Any())
                    {
                        @string.Join(", ", item.Usages.Select(u => u.Description))
                    }
                    else
                    {
                        <span>No Usages</span>
                    }
                </td>
                <td>
                    @if (item.Locker != null)
                    {
                        @item.Locker.Number
                    }
                    else
                    {
                        <span>No Locker</span>
                    }
                </td>
                <td>
                    @if (item.Drawer != null)
                    {
                        @item.Drawer.Number
                    }
                    else
                    {
                        <span>No Drawers</span>
                    }
                </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="UpdateProduct" asp-route-id="@item.Id"> <button class="btn btn-primary btn-sm">Edit</button></a>
                                <form asp-action="DeleteProduct" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="confirmDelete(event, this);">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete(event, form) {
            event.preventDefault();
            Swal.fire({
                title: 'Sei sicuro?',
                text: "Non potrai annullare questa operazione!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sì, elimina!'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
}
