@model IEnumerable<BW_VI___Team_1.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name) <!-- Nota: Usare .First() per ottenere un esempio della proprietà -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Type) <!-- Nota: Usare .First() per ottenere un esempio della proprietà -->
            </th>
            <th>
                Suppliers
            </th>
            <th>
                Usages
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @if (item.Suppliers != null && item.Suppliers.Any())
                    {
                        @string.Join(", ", item.Suppliers.Select(s => s.Name)) 
                    }
                    else
                    {
                        <span>No Suppliers</span>
                    }
                </td>
                <td>
                    @if (item.Usages != null && item.Usages.Any())
                    {
                        @string.Join(", ", item.Usages.Select(u => u.Description)) 
                    }
                    else
                    {
                        <span>No Usages</span>
                    }
                </td>
                <td>
                    <a asp-action="UpdateProduct" asp-route-id="@item.Id">Edit</a> |
                    <form asp-action="DeleteProduct" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="confirmDelete(event, this);">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete(event, form) {
            event.preventDefault();
            Swal.fire({
                title: 'Sei sicuro?',
                text: "Non potrai annullare questa operazione!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sì, elimina!'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
}
