@model BW_VI___Team_1.Models.DTO.RecoveryDTO

@{
    ViewBag.Title = "Add Recovery";
}

<h2>Add Recovery</h2>

<form asp-action="AddRecovery" method="post">
    <input type="hidden" asp-for="StartDate" />
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input type="date" asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Animal" class="control-label"></label>
        <select asp-for="Animal.Id" class="form-control" asp-items="@ViewBag.Animals">
            <option value="">Select Animal</option>
        </select>
        <span asp-validation-for="Animal.Id" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="IsRefound" />

    <div class="form-group">
        <input type="submit" value="Add Recovery" class="btn btn-primary" />
    </div>
</form>
