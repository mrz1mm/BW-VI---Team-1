@model BW_VI___Team_1.Models.Product

@{
    ViewData["Title"] = "AddProduct";
}

<h1>AddProduct</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="AnimalFood">Animal Food</option>
                    <option value="Medicine">Medicine</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group" id="locker-fields" style="display: none;">
                <label asp-for="Locker.Number" class="control-label"></label>
                <input asp-for="Locker.Number" class="form-control" />
                <span asp-validation-for="Locker.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const typeSelect = document.querySelector('select[name="Type"]');
            const lockerFields = document.getElementById('locker-fields');
            
            function toggleLockerFields() {
                if (typeSelect.value === 'Medicine') {
                    lockerFields.style.display = 'block';
                } else {
                    lockerFields.style.display = 'none';
                }
            }

            typeSelect.addEventListener('change', toggleLockerFields);
            toggleLockerFields();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
