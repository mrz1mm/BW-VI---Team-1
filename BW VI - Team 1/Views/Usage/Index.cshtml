@model IEnumerable<BW_VI___Team_1.Models.Usage>

@{
    ViewData["Title"] = "Index";
}

<div class="table">
    <section class="table_header"><h1 class="text-center">Registro degli Usi </section>
    <section class="table_body d-flex align-item-center justify-content-center">
        <table>
            <thead>
                <tr class="text-center">
                    <th>
                        Descrizione
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <div class="btn-group gap-1" role="group">
                                <a asp-action="UpdateUsage" asp-route-id="@item.Id"> <button class="btn buttonEdit btn-sm">Edit</button></a>
                                <form asp-action="DeleteUsage" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="confirmDelete(event, this);">
                                    <button type="submit" class="btn buttonDelete btn-sm">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @section Scripts {
            <script type="text/javascript">
                function confirmDelete(event, form) {
                    event.preventDefault();
                    Swal.fire({
                        title: 'Sei sicuro?',
                        text: "Non potrai annullare questa operazione!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Sì, elimina!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                }
            </script>
        }
