@model BW_VI___Team_1.Models.Usage

@{
    ViewData["Title"] = "UpdateUsage";
}
<div class="edit border border-1 rounded-1 my-3">
    <h1 class="text-white text-center">Modifica Uso</h1>

    <h4 class="text-white text-center">Uso</h4>
    <hr class="text-light />
<div class="row">
        <div class="col-md-4 ColorNavbar container border border-2 rounded-3  text-white mb-4">
        <form asp-action="UpdateUsage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-3">
                <label asp-for="Description" class="control-label my-2">Descrizione</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index" class="text-decoration-none">Torna alla lista</a>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
