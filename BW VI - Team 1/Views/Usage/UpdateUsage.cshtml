@model BW_VI___Team_1.Models.Usage

@{
    ViewData["Title"] = "UpdateUsage";
}
<div class="container">
<h1 class="text-info">Modifica Uso</h1>

<h4>Uso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateUsage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-3">
                <label asp-for="Description" class="control-label my-2">Descrizione</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna alla lista</a>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
