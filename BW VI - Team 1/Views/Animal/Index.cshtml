@model IEnumerable<BW_VI___Team_1.Models.Animal>

@{
    ViewData["Title"] = "Index";
}



<div class="table ">
    <section class="table_header"><h1 class="text-center">Registro Animali</h1></section>
    <section class="table_body d-flex align-item-center justify-content-center">
        <table>
            <thead>
                <tr class="text-center">
                    <th>
                       Foto
                    </th>
                    <th>
                        Nome
                    </th>
                    <th>
                        Specie
                    </th>
                    <th>
                        Razza
                    </th>
                    <th>
                        Colore
                    </th>
                    <th>
                        Data di nascita
                    </th>
                    <th>
                        Data di registrazione
                    </th>
                    <th>
                       Microchip
                    </th>
                    <th>
                        Numero Microchip
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>
                            <img src="@item.ImageUrl" alt="Animal Image" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Species)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Breed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BirthDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegisterDate)
                        </td>
                        <td>
                            @if (item.Microchip)
                            {
                                <span class="checkmark-static checked"></span>
                            }
                            else
                            {
                                <span class="checkmark-static"></span>
                            }
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.MicrochipNumber)
                        </td>
                        <td>
                            <div class="btn-group gap-1" role="group">
                                <a asp-action="UpdateAnimal" asp-route-id="@item.Id"> <button class="btn buttonEdit btn-sm">Edit</button></a>
                                <a asp-action="AnimalDetails" asp-route-id="@item.Id"> <button class="btn buttonDetails btn-sm">Details</button></a>
                                <form asp-action="DeleteAnimal" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="confirmDelete(event, this);">
                                    <button type="submit" class="btn buttonDelete btn-sm">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>


@section Scripts {
    <script type="text/javascript">
        function confirmDelete(event, form) {
            event.preventDefault();
            Swal.fire({
                title: 'Sei sicuro?',
                text: "Non potrai annullare questa operazione!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sì, elimina!'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
}