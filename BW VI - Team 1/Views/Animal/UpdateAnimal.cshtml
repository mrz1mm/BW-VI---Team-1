@model BW_VI___Team_1.Models.DTO.AnimalDTO

@{
    ViewData["Title"] = "Modifica Animale";
    var animalId = ViewBag.AnimalId;
}

<h1>Modifica Dati Animale</h1>

<form asp-action="UpdateAnimal" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@animalId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Nome</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Species" class="control-label">Specie</label>
        <input asp-for="Species" class="form-control" />
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Breed" class="control-label">Razza</label>
        <input asp-for="Breed" class="form-control" />
        <span asp-validation-for="Breed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color" class="control-label">Colore</label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate" class="control-label">Data di nascita</label>
        <input asp-for="BirthDate" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Microchip" class="control-label">Microchip</label>
        <input asp-for="Microchip" class="form-control" />
        <span asp-validation-for="Microchip" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MicrochipNumber" class="control-label">Numero Microchip</label>
        <input asp-for="MicrochipNumber" class="form-control" />
        <span asp-validation-for="MicrochipNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Owner.FirstName" class="control-label">Nome Proprietario</label>
        <input asp-for="Owner.FirstName" class="form-control" />
        <span asp-validation-for="Owner.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Owner.LastName" class="control-label">Cognome Proprietario</label>
        <input asp-for="Owner.LastName" class="form-control" />
        <span asp-validation-for="Owner.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Owner.FiscalCode" class="control-label">Codice Fiscale</label>
        <input asp-for="Owner.FiscalCode" class="form-control" />
        <span asp-validation-for="Owner.FiscalCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageFile" class="control-label">Foto Animale</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salva</button>
</form>

<div>
    <a asp-action="Index">Torna alla lista</a>
</div>
