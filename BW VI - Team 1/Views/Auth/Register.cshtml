@model BW_VI___Team_1.Models.DTO.RegisterDTO

@{
    ViewData["Title"] = "Register";
}
<div class="edit border border-1 rounded-1 my-3">
    <h1 class="text-white text-center my-2">Registrazione</h1>

    <hr class="text-light"/>
    <div class="row">
        <div class="col-md-4 ColorNavbar container border border-2 rounded-3  text-white mb-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Password" class="control-label" type="text">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Role" class="control-label">Ruolo</label>
                <select asp-for="Role" class="form-control">
                    <option value="Customer">Cliente</option>
                    <option value="Supplier">Fornitore</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Registrati" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
<div class="m-2">
    <a asp-action="Index" class="text-decoration-none">Torna alla lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
