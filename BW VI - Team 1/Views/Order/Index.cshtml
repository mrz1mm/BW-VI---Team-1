@model IEnumerable<BW_VI___Team_1.Models.Order>

@{
    ViewData["Title"] = "Index";
}



<div class="table">
    <section class="table_header"><h1 class="text-center">Registro Ordini</h1></section>
    <section class="table_body d-flex align-item-center justify-content-center">
        <table>
            <thead>
                <tr class="text-center">
                    <th>Prescrizione Medica</th>
                    <th>Data Ordine</th>
                    <th>Owner</th>
                    <th>Prodotti</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@Html.DisplayFor(modelItem => item.MedicalPrescription)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>
                            @if (item.Owner != null)
                            {
                                @Html.DisplayFor(modelItem => item.Owner.FirstName) @Html.DisplayFor(modelItem => item.Owner.LastName)
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </td>
                        <td>
                            @if (item.Products != null && item.Products.Any())
                            {
                                <ul>
                                    @foreach (var product in item.Products)
                                    {
                                        <li>@Html.DisplayFor(modelItem => product.Name)</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span>No products</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="UpdateOrder" asp-route-id="@item.Id"> <button class="btn btn-primary btn-sm">Edit</button></a>
                                <form asp-action="DeleteOrder" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="confirmDelete(event, this);">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>

<p>
    <a asp-action="AddOrder">Create New Order</a>
</p>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete(event, form) {
            event.preventDefault();
            Swal.fire({
                title: 'Sei sicuro?',
                text: "Non potrai annullare questa operazione!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sì, elimina!'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
}