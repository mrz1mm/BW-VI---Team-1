@model BW_VI___Team_1.Models.Recovery

@{
    ViewData["Title"] = "Update Recovery";
}
<div class="edit border border-1 rounded-1 my-3">
    <h1 class="text-white text-center">Modifica Ricovero</h1>
    <div class="ColorNavbar container border border-2 rounded-3  text-white mb-4">
<form asp-action="UpdateRecovery" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="StartDate" />

    <div class="form-group my-2">
        <label asp-for="EndDate">Data fine ricovero</label>
        <input type="date" asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group my-2">
        <label asp-for="AnimalId">Nome animale</label>
        <select asp-for="AnimalId" asp-items="ViewBag.Animals" class="form-control">
        </select>
        <span asp-validation-for="AnimalId" class="text-danger"></span>
    </div>

    <div class="form-group my-2">
        <label asp-for="IsRefound">Rilasciato</label>
        <input type="checkbox" asp-for="IsRefound" />
        <span asp-validation-for="IsRefound" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary my-2">Salva</button>
</form>
    </div>

</div>
<div>
    <a asp-action="Index" class="text-decoration-none">Torna alla lista</a>
</div>