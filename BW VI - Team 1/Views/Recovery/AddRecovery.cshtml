@model BW_VI___Team_1.Models.DTO.RecoveryDTO

@{
    ViewData["Title"] = "Add Recovery";
}

<h1>Add Recovery</h1>

<form asp-action="AddRecovery" method="post">

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input type="date" asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AnimalId">Animal</label>
        <select asp-for="AnimalId" asp-items="ViewBag.Animals" class="form-control"></select>
        <span asp-validation-for="AnimalId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
